{
  "name": "caskchain",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "description": "",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:emulator": "npx cross-env CHAIN_ENV=emulator node scripts/startup.js",
    "stop": "npx pm2 stop all",
    "build:web": "turbo run build --filter=web",
    "build:backend": "turbo run build --filter=api",
    "heroku-postbuild": "if [ $CLIENT_ENV ]; then yarn run prod-web; elif [ $SERVER_ENV ]; then yarn run prod-backend; else echo no environment detected, please set CLIENT_ENV or SERVER_ENV; fi",
    "prod-web": "yarn run build:web",
    "prod-backend": "yarn run build:backend"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.0.0",
    "chalk-animation": "^1.6.0",
    "classnames": "^2.3.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "fs-jetpack": "^4.3.1",
    "ganache": "^7.7.5",
    "gradient-string": "^2.0.0",
    "inquirer": "^8.2.0",
    "node-fetch": "^3.3.0",
    "ora": "^6.1.0",
    "pm2": "^5.1.2",
    "postgresql": "^0.0.1",
    "universal-cookie": "^4.0.4",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/yargs": "^16.0.1",
    "cypress": "^10.11.0",
    "dotenv-cli": "^5.1.0",
    "kill-port-process": "^3.0.1",
    "lerna": "^4.0.0",
    "node-gyp": "^9.0.0",
    "turbo": "*",
    "npm": "^8.5.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
